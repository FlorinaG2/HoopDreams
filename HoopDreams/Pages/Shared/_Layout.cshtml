<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HoopDreams</title>

    <!-- FAVICONS -->
    <link rel="icon" href="/Images/Sigla_Tr.png" type="image/png" sizes="32x32" />
    <link rel="apple-touch-icon" href="/Images/Sigla_Tr.png" sizes="180x180" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm custom-navbar-bg border-bottom box-shadow mb-3 fixed-top">
            <div class="container">
                <a class="navbar-brand" id="sigla" asp-area="" asp-page="/Index">
                    <img class="sigla-hoop brighter-logo" src="~/Images/Sigla_Tr.png" alt="Sigla Hoop Dreams"/>
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="#about">Despre noi</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="#age-groups">Grupe de vârstă</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-page="/RegisterForm">Înscrieri</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-page="/News">Noutăți</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="#contact">Contact</a>
                        </li>
                    </ul>
                    <div class="navbar-nav">
                        <a href="https://www.instagram.com/hoopdreamscluj" target="_blank" class="nav-link instagram-link" title="Follow us on Instagram">
                            <i class="fab fa-instagram"></i>
                        </a>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted fixed-bottom">
        <div class="container">
            &copy; 2025 - HoopDreams - <a asp-area="" asp-page="/Privacy" class="footer-link">Privacy</a> | <a asp-area="" asp-page="/TermsAndConditions" class="footer-link">Termeni și condiții</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        // Ensure users land at the top of the page when navigating to home page
        document.addEventListener('DOMContentLoaded', function() {
            // Check if we're on the home page (Index)
            if (window.location.pathname === '/' || window.location.pathname === '/Index') {
                // Scroll to top of page
                window.scrollTo(0, 0);
            }
            
            // Handle navigation to home page from other pages
            const homeLinks = document.querySelectorAll('a[href="/"], a[href="/Index"], a[asp-page="/Index"]');
            homeLinks.forEach(function(link) {
                link.addEventListener('click', function(e) {
                    // If clicking on a home link, ensure we go to the top
                    if (this.getAttribute('href') === '/' || this.getAttribute('href') === '/Index') {
                        setTimeout(function() {
                            window.scrollTo(0, 0);
                        }, 100);
                    }
                });
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
