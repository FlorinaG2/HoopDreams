<script>
    // Coach popup functionality
    const popupOverlay = document.getElementById("popupOverlay");
    const popupContent = document.getElementById("popupContent");
    const trigger = document.getElementById("coachTrigger");

    // Show popup on trigger click
    trigger.addEventListener("click", () => {
        popupOverlay.style.opacity = "1";
        popupOverlay.style.pointerEvents = "auto";
        popupOverlay.style.zIndex = "999";
    });

    // Hide popup on click outside
    popupOverlay.addEventListener("click", (e) => {
        if (!popupContent.contains(e.target)) {
            popupOverlay.style.opacity = "0";
            popupOverlay.style.pointerEvents = "none";
            popupOverlay.style.zIndex = "1";
        }
    });

    // Terms and Conditions popup functionality
    document.addEventListener('DOMContentLoaded', function () {
        const termsPopup = document.getElementById('termsPopup');
        const acceptBtn = document.getElementById('acceptTerms');
        const closeBtn = document.getElementById('closeTermsPopup');

        // Check if terms were already accepted
        if (!localStorage.getItem('termsAccepted')) {
            termsPopup.style.display = 'flex';
        }

        // Accept terms
        acceptBtn.addEventListener('click', function () {
            localStorage.setItem('termsAccepted', 'true');
            termsPopup.style.display = 'none';
        });

        // Close popup (but don't accept terms)
        closeBtn.addEventListener('click', function () {
            termsPopup.style.display = 'none';
        });

        // Close popup when clicking outside
        termsPopup.addEventListener('click', function (e) {
            if (e.target === termsPopup) {
                termsPopup.style.display = 'none';
            }
        });
    });
</script>
